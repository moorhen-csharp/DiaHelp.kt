<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:fitsSystemWindows="true">

    <!-- Верхние кнопки -->
    <LinearLayout
        android:id="@+id/topButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Назад"
            style="?attr/materialButtonOutlinedStyle" />

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Очистить"
            style="?attr/materialButtonOutlinedStyle" />
    </LinearLayout>

    <!-- Блок с результатами -->
    <LinearLayout
        android:id="@+id/resultBlock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/shape_rounded_containers"
        app:layout_constraintTop_toBottomOf="@id/topButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/periodDropdownLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <AutoCompleteTextView
                android:id="@+id/periodDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:hint="Выберите период"
                android:textColor="?attr/colorOnBackground"
                android:textColorHint="?attr/colorOnSurfaceVariant"
                android:backgroundTint="@android:color/transparent" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textAvgLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Средний уровень сахара в крови:"
            android:textColor="?attr/colorOnBackground"
            android:layout_marginTop="8dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textAverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0,0 ммоль/л"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="?attr/colorOnBackground" />
    </LinearLayout>

    <!-- Список данных -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerReadings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="10dp"
        android:clipToPadding="false"
        android:padding="8dp"
        android:background="@drawable/shape_rounded_containers"
        app:layout_constraintTop_toBottomOf="@id/resultBlock"
        app:layout_constraintBottom_toTopOf="@id/toggleGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Переключатель Сахар / Еда -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/recyclerReadings"
        app:layout_constraintBottom_toTopOf="@id/btnAddData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:checkedButton="@id/btnSugar"
        app:singleSelection="true"
        app:selectionRequired="true"
        android:padding="2dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSugar"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="Сахар"
            android:textColor="?attr/colorOnSurface"
            android:backgroundTint="?attr/colorSurface"
            android:checkable="true"
            android:checked="true"
            app:checkedIconTint="?attr/colorOnPrimary"
            app:strokeWidth="2dp"
            app:strokeColor="?attr/colorOutline"
            app:rippleColor="?attr/colorPrimaryContainer" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFood"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="Еда"
            android:textColor="?attr/colorOnSurface"
            android:backgroundTint="?attr/colorSurface"
            android:checkable="true"
            app:strokeWidth="2dp"
            app:strokeColor="?attr/colorOutline"
            app:rippleColor="?attr/colorPrimaryContainer" />
    </com.google.android.material.button.MaterialButtonToggleGroup>


    <!-- Кнопка "Ввести данные" -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddData"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Ввести данные"
        android:layout_marginBottom="24dp"
        app:cornerRadius="16dp"
        app:backgroundTint="?attr/colorSurfaceVariant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
