<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/shape_dialog_containers"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_title"
        android:text="Очистить список"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/color_text_shape_dialogBackground_containers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/dialog_message"
        android:text="Вы уверены, что хотите удалить все записи?"
        android:textSize="16sp"
        android:textColor="@color/color_text_shape_dialogBackground_containers"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCancel"
            android:text="Нет"
            android:backgroundTint="@color/dialogBtnCancel"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnOk"
            android:text="Да"
            android:backgroundTint="@color/dialogBtnOk"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
